doctype html
html(lang="es")
    head
        title Chess
        meta( name="viewport" content="initial-scale=1")
        link(rel="stylesheet", href="/vendors/angular-material/angular-material.min.css")
        link(rel="stylesheet", href="/vendors/angular-material-icons/dist/icons-material.min.css")
        link(rel="stylesheet", href="/assets/common/stylesheet/site.css")
        link( rel="shortcut icon" href="/assets/common/images/site/chess-logo-1.png" type="image/png")
        block stylesheet
    body(ng-app="chessApp" ng-controller="chessController as vm" data-user=user)
        div(layout="column" role="main" flex class="layout-column flex" aria-hidden="false")
            md-toolbar(class="md-whiteframe-glow-z1 site-content-toolbar" ng-cloak)
                div(class="md-toolbar-tools")
                    img(src="/assets/common/images/site/chess-logo-1.png" class="logo")
                    span(class="user-logged") #{user.name}
                    span(flex)
                    md-button(class="md-icon-button" ui-sref="try")
                        md-icon book
                        md-tooltip Entrenador
                    md-button(class="md-icon-button" ng-href="/logout")
                        md-icon exit_to_app
                        md-tooltip Salir
            md-content(class="layout-padding site-content" ui-view="lazyLoadView" ng-cloak)
            div(layout="row" layout-align="left end" style="position: fixed;bottom: 0;")
                md-button( class="md-fab" aria-label="Eat cake" ui-sref="chat")
                    md-icon message

        script(src="/socket.io/socket.io.js")
        script(src="/vendors/angular/angular.min.js")
        script(src="/vendors/angular-sanitize/angular-sanitize.min.js")
        script(src="/vendors/angular-animate/angular-animate.min.js")
        script(src="/vendors/angular-aria/angular-aria.min.js")
        script(src="/vendors/angular-messages/angular-messages.min.js")
        script(src="/vendors/angular-material/angular-material.min.js")
        script(src="/vendors/angular-lazyload/ocLazyLoad.min.js")
        script(src="/vendors/angular-ui-router/release/angular-ui-router.min.js")

        script(src="/assets/app.js")
        script(src="/assets/common/directives/scripts/chat.js")